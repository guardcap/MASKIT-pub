{
  "$schema":"https://json-schema.org/draft/2020-12/schema",
  "$id":"decision.schema.json",
  "title":"Final Decision",
  "type":"object",
  "required":["schema_version","entity_type","action","params","confidence","evidence_refs"],
  "additionalProperties": false,
  "properties":{
    "schema_version": { "$ref": "common.json#/$defs/SchemaVersion" },
    "entity_type":{"type":"string"},
    "action":{"$ref":"common.json#/$defs/Action"},
    "params":{"type":"object","default":{}},
    "confidence":{"type":"number","minimum":0,"maximum":1},
    "evidence_refs":{"type":"array","items":{"$ref":"common.json#/$defs/EvidenceRef"}}
  }
}
